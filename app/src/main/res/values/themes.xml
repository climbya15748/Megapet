<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
<!--    <style name="Theme.Megapet" parent="Theme.MaterialComponents.DayNight.DarkActionBar">-->
    <style name="Theme.Megapet" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/megapet_logo_blue</item>
        <item name="colorPrimaryVariant">@color/megapetGrey</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/megapetBlue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>


    <style name="bottom_nav_bar" >
        <item name="colorPrimary">#FFF964</item>
        <item name="colorOnSurface">@color/megapet_logo_blue</item>
    </style>

    <style name="large_button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/light_yellow</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="large_button.register_selection" parent="large_button">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:layout_height">90dp</item>
    </style>

    <style name="member_card">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>